<?xml version="1.0" encoding="utf-8" ?>
<ContentPage xmlns="http://xamarin.com/schemas/2014/forms"
             xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
             x:Class="LoginNavigationExample.LoginPage">
	
	<StackLayout>
		
		<Label Text="Login:" />
		<Entry x:Name="LoginValue" />

		<Label Text="Password:" />
		<Entry x:Name="PasswordValue" />
		
		<Button x:Name="SubmitButton" Text="Login" Clicked="SubmitButton_OnClicked" />

		<ActivityIndicator x:Name="LoginProgress" IsVisible="False" IsRunning="True" />
		
	</StackLayout>
</ContentPage>